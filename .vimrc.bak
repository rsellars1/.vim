set nocompatible
set t_Co=256

colorscheme monokai
syntax on

set autoindent
set smarttab
set expandtab
set tabstop=4
set softtabstop=4

set shiftwidth=4
set shiftround

set backspace=indent,eol,start
set autochdir	" Set current working directory to current file/window/buffer
set autoread	" Re-read files changed outside of vim
set copyindent  " Keep structure of indentation when copying
set cursorline
set virtualedit=onemore
set history=1000
set hidden
set showmode
set nowrap
set tags=tags
set number

set hlsearch
set ignorecase
set smartcase

set wildmode=list:longest,full

set visualbell
set noerrorbells
set timeoutlen=500
set lazyredraw

set colorcolumn=80
hi ColorColumn ctermbg=236

" Highlight problematic whitespace
set list
set listchars=tab:.\ ,trail:.,nbsp:.,precedes:<,extends:>

" Swap files out of the project root
set backupdir=~/.vim/backup/
set directory=~/.vim/swap/
